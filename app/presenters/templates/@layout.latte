<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">

	<title>{ifset title}{include title|striptags} | {/ifset}GitLab AutoMerger</title>

	<link rel="stylesheet" href="{$basePath}/css/bootstrap.min.css">
	<link rel="stylesheet" href="{$basePath}/css/bootstrap-theme.min.css">
	<link rel="stylesheet" href="{$basePath}/css/style.css">
	<link rel="shortcut icon" href="{$basePath}/favicon.ico">
	<meta name="viewport" content="width=device-width">
	{block head}{/block}
</head>

<body>
	{control menu}
	<div class="container">
		<div n:foreach="$flashes as $flash" class="alert alert-{$flash->type}">
			{if $flash->type == 'success'}
				{? $flashIcon = 'glyphicon glyphicon-ok-sign'}
			{elseif $flash->type == 'danger'}
				{? $flashIcon = 'glyphicon glyphicon-exclamation-sign'}
			{else}
				{? $flashIcon = 'glyphicon glyphicon-info-sign'}
			{/if}
			<span class="{$flashIcon}" aria-hidden="true"></span>
			{$flash->message}
		</div>
		{include content}
	</div>

	{block scripts}
	<script src="//code.jquery.com/jquery-1.11.2.min.js"></script>
	<script src="{$basePath}/js/bootstrap.min.js"></script>
	<script src="{$basePath}/js/main.js"></script>
	{/block}

	{include '@blocks/modal.latte'}
</body>
</html>
